@model LoginFormParameters.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Login", "User", FormMethod.Post))
        {
        <fieldset style="width:40%;text-align:center;">
            <legend>Login</legend>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
            <table>
                <tr>
                    <td>@Html.LabelFor(u => u.UserName)</td>
                    <td>@Html.TextBoxFor(u => u.UserName)</td>
                    <td>@Html.ValidationMessageFor(u => u.UserName)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(u => u.Password)</td>
                    <td>@Html.PasswordFor(u => u.Password)</td>
                    <td>@Html.ValidationMessageFor(u => u.Password)</td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="LOGIN" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td>@ViewBag.error</td>
                </tr>
            </table>
        </fieldset>
        }

    </div>
</body>
</html>
